{
  // editor settings
  "editor.rulers": [
    88,
    100
  ],
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  // files settings
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/build": true,
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
  },
  // unit test settings
  "testMate.cpp.test.runtimeLimit": 60,
  "testMate.cpp.test.executables": "build/**/test/*_test",
  // cmake settings
  "cmake.configureOnOpen": true,
  "cmake.buildDirectory": "${workspaceRoot}/build/${buildType}",
  "cmake.generator": "Ninja",
  // Markdown settings
  "[markdown]": {
    "editor.tabSize": 4,
    "files.trimTrailingWhitespace": false,
  },
  "markdown.extension.list.indentationSize": "inherit",
  "markdown.extension.tableFormatter.enabled": false,
  "markdown.extension.toc.levels": "1..3",
  // setings for PlantUML
  "plantuml.diagramsRoot": "design_doc/figures/src",
  "plantuml.exportOutDir": "design_doc/figures",
  "plantuml.exportFormat": "svg",
  "plantuml.exportSubFolder": false,
  // local dictionary
  "cSpell.words": [
    "GTEST"
  ],
  "files.associations": {
    "array": "cpp",
    "atomic": "cpp",
    "bit": "cpp",
    "*.tcc": "cpp",
    "cctype": "cpp",
    "chrono": "cpp",
    "clocale": "cpp",
    "cmath": "cpp",
    "condition_variable": "cpp",
    "cstdarg": "cpp",
    "cstddef": "cpp",
    "cstdint": "cpp",
    "cstdio": "cpp",
    "cstdlib": "cpp",
    "cstring": "cpp",
    "ctime": "cpp",
    "cwchar": "cpp",
    "cwctype": "cpp",
    "deque": "cpp",
    "unordered_map": "cpp",
    "vector": "cpp",
    "exception": "cpp",
    "algorithm": "cpp",
    "functional": "cpp",
    "iterator": "cpp",
    "memory": "cpp",
    "memory_resource": "cpp",
    "numeric": "cpp",
    "optional": "cpp",
    "random": "cpp",
    "string": "cpp",
    "string_view": "cpp",
    "system_error": "cpp",
    "tuple": "cpp",
    "type_traits": "cpp",
    "utility": "cpp",
    "fstream": "cpp",
    "initializer_list": "cpp",
    "iosfwd": "cpp",
    "istream": "cpp",
    "limits": "cpp",
    "mutex": "cpp",
    "new": "cpp",
    "ostream": "cpp",
    "ratio": "cpp",
    "shared_mutex": "cpp",
    "sstream": "cpp",
    "stdexcept": "cpp",
    "streambuf": "cpp",
    "thread": "cpp",
    "cinttypes": "cpp",
    "typeinfo": "cpp"
  },
}
